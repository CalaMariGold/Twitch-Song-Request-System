# Twitch API (required for fetching user avatars/logins if needed)
NEXT_PUBLIC_TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TARGET_REWARD_TITLE="Exact title of the reward used for song requests"

# Twitch Chat Bot (optional but recommended)
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_BOT_OAUTH_TOKEN=oauth:your_bot_token
TWITCH_CHANNEL_NAME=your_channel_name

# YouTube API (required for video details)
YOUTUBE_API_KEY=your_youtube_api_key

# StreamElements API (required for donation integration)
STREAMELEMENTS_JWT_TOKEN=your_jwt_token_from_streamelements_dashboard
STREAMELEMENTS_ACCOUNT_ID=your_streamelements_account_id

# Spotify API (required for Spotify song matching)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Frontend / Auth Configuration (Likely required)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Admin Access Control
ADMIN_USERNAMES=username1,username2

# Server Configuration
SOCKET_PORT=3002
NEXT_PUBLIC_SOCKET_URL=http://localhost:3002 # Should match SOCKET_PORT
MAX_DONATION_DURATION_SECONDS=600 # Max duration in seconds for songs requested via donations (default: 10 mins)
MAX_CHANNEL_POINT_DURATION_SECONDS=300 # Max duration in seconds for songs requested via channel points (default: 5 mins)

# Database Path (Optional)
DB_PATH=data/songRequestSystem.db # Optional: Define a custom path for the database file
PERSISTENT_DATA_PATH=path # Define a persistent path for the database file

# Allowed Origins (for CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001